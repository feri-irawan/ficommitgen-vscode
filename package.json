{
  "name": "ficommitgen-vscode",
  "displayName": "Ficommitgen",
  "description": "Commit generation extension for Visual Studio Code",
  "publisher": "feri-irawan",
  "author": {
    "name": "feri-irawan",
    "url": "https://github.com/feri-irawan"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feri-irawan/ficommitgen-vscode.git"
  },
  "icon": "media/icon.png",
  "license": "MIT",
  "version": "0.3.1",
  "engines": {
    "vscode": "^1.100.3"
  },
  "categories": [
    "AI",
    "SCM Providers"
  ],
  "keywords": [
    "ai",
    "auto",
    "commit",
    "conventional-commit",
    "generate",
    "message",
    "vscode",
    "git",
    "scm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ficommitgen-vscode.generateCommit",
        "title": "Ficommitgen: Generate Commit",
        "icon": "$(sparkle)"
      },
      {
        "command": "ficommitgen-vscode.setToken",
        "title": "Ficommitgen: Set Token"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "ficommitgen-vscode.generateCommit",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.0",
    "gray-matter": "^4.0.3"
  }
}
